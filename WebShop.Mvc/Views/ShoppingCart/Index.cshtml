@model IEnumerable<WebShop.DTO.Article>

@{
    ViewBag.Title = "ShoppingCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h2>ShoppingCart</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price excl.VAT</th>
                <th>Price incl.VAT</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.PriceExclVat.ToString("C")</td>
                    @{
                        var price = @item.PriceExclVat * 1.2M;
                        <td>@price.ToString("C")</td> @*TODO move VAT calc logic out of here*@
                    }
                </tr>
                        }
        </tbody>
    </table>

    <h2>Summary</h2>
    <div class="row">
        <div class="col-sm-2">SubTotal Excl VAT</div>
        <div class="col-sm-2">
            @Model.Sum(o => o.PriceExclVat).ToString("C")
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">Total VAT</div>
        <div class="col-sm-2">
            @Model.Sum(o => o.PriceExclVat * 0.2M).ToString("C") @*TODO move VAT calc logic out of here*@
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">SubTotal Incl VAT</div>
        <div class="col-sm-2">
            @Model.Sum(o => o.PriceExclVat * 1.2M).ToString("C") @*TODO move VAT calc logic out of here*@
        </div>
    </div>

    <div class="row">
        <div class="col-sm-offset-11 col-sm-1">
            <a class="btn btn-primary" href="@Url.Action("Checkout")">Checkout</a>
        </div>
    </div>
</div>